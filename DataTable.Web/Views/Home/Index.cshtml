@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">DataTable</h1>
    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Company Name</th>
                <th>Contact Name</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
    </table>
</div>

@section scripts {
    <script src="~/js/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    url: "home/data",
                    dataSrc: ''
                },
                "columns": [
                    { "data": "customerID" },
                    { "data": "companyName" },
                    { "data": "contactName" },
                    { "data": "city" },
                    { "data": "country" },
                    { "data": "phone" }
                ]
            });
        });
    </script>
}
